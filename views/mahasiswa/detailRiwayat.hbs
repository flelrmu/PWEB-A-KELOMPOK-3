<style>
    section {
        margin: 0;
        background-color: #ffffff;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .container-1 {
        text-align: center;
    }

    h1 {
        font-size: 24px;
        margin-bottom: 20px;
    }

    .detail-container {
        display: inline-block;
        text-align: left;
        border: 1px solid #ccc;
        padding: 20px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        width: 800px;
    }

    p {
        font-size: 16px;
        margin: 10px 0;
    }

    ol {
        margin: 10px 0;
        padding-left: 20px;
    }

    .button-group {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
    }

    .evaluasi {
        justify-content: left;
    }

    .btn {
        background-color: #5C4033;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        text-decoration: none;
    }

    .btn:hover {
        background-color: #4B3028;
    }
</style>




